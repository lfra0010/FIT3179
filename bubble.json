{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "Life Expectancy by Median Income in Europe",
  "data": {
    "url": "https://raw.githubusercontent.com/lfra0010/FIT3179/main/euro_2016a.csv"
  },
  "transform": [{"calculate": "datum.unemp_rate/100", "as": "percent"}],
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "life_expect",
          "type": "quantitative",
          "title": "Life Expectancy",
          "scale": {"domain": [70, 88]}
        },
        "y": {
          "field": "median_income",
          "type": "quantitative",
          "title": "Median Income"
        },
        "color": {
          "field": "unemp_rate",
          "type": "quantitative",
          "title": "Unemployment rate",
          "scale": {"scheme": "reds"}
        },
        "size": {
          "field": "total_pop",
          "type": "quantitative",
          "title": "Total Population",
          "scale": {"range": [100, 1000]}
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {
            "field": "percent",
            "type": "quantitative",
            "title": "Unemployment Rate",
            "format": ".1%"
          },
          {"field": "total_pop", "type": "nominal", "title": "Total Population"}
        ]
      }
    },
    {
      "data": {"values": [{}]},
      "mark": {"type": "rule", "strokeDash": [2, 2], "size": 2},
      "encoding": {"y": {"datum": 15972}}
    }
  ],
  "config": {}
}