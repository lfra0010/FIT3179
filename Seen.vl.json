{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Bird Location",
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lfra0010/FIT3179/main/departements.json",
        "format": {"type": "topojson", "feature": "departements"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lfra0010/FIT3179/main/birds_france.csv"
      },
      "transform": [{"filter": "datum.lng > -5"}, {"filter": "datum.lat > 40"}],
      "encoding": {
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {"type": "circle", "tooltip": {"content": "data"}},
          "encoding": {
            "color": {
              "field": "bird-seen",
              "type": "nominal",
              "scale": {"domain": ["yes", "no"], "range": ["red", "blue"]}
            }
          }
        }
      ]
    }
  ],
  "config": {}
}