{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "repeat": {
    "row": ["prct_job_satis_high", "prct_life_satis_high", "median_income"],
    "column": ["median_income", "prct_life_satis_high", "prct_job_satis_high"]
  },
  "title": {
    "text": "Matrix reprensentation of job satisfaction, median income & life satisfaction for European countries",
    "anchor": "middle"
  },
  "spec": {
    "data": {
      "url": "https://raw.githubusercontent.com/lfra0010/FIT3179/main/euro_2016a.csv"
    },
    "transform": [
      {"calculate": "datum.prct_job_satis_high/100", "as": "Job Satisfaction"},
      {"calculate": "datum.prct_life_satis_high/100", "as": "Life Satisfaction"}
    ],
    "mark": "point",
    "selection": {
      "brush": {
        "type": "interval",
        "resolve": "union",
        "on": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
        "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
        "zoom": "wheel![event.shiftKey]"
      },
      "grid": {
        "type": "interval",
        "resolve": "global",
        "bind": "scales",
        "translate": "[mousedown[!event.shiftKey], window:mouseup] > window:mousemove!",
        "zoom": "wheel![!event.shiftKey]"
      }
    },
    "encoding": {
      "x": {"field": {"repeat": "column"}, "type": "quantitative"},
      "y": {
        "field": {"repeat": "row"},
        "type": "quantitative",
        "axis": {"minExtent": 30}
      },
      "size": {
        "condition": {
          "selection": "brush",
          "field": "gdp",
          "type": "quantitative",
          "title": "Gross Domastic Product"
        }
      },
      "tooltip": [
        {"field": "country", "type": "nominal"},
        {"field": "Life Satisfaction", "type": "quantitative", "format": ".0%"},
        {"field": "Job Satisfaction", "type": "quantitative", "format": ".0%"},
        {"field": "median_income", "type": "quantitative"},
        {
          "field": "gdp",
          "type": "quantitative",
          "title": "Gross Domestic Product"
        }
      ]
    }
  },
  "config": {}
}